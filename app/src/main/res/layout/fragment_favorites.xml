<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/favoriteListView"
        android:layout_width="411dp"
        android:layout_height="680dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

    <TextView
        android:id="@+id/milkLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:text="Milk (ml)"
        app:layout_constraintBottom_toTopOf="@+id/favoriteListView"
        app:layout_constraintStart_toEndOf="@+id/waterLabel2" />

    <TextView
        android:id="@+id/coffeeLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:text="Coffee (ml)"
        app:layout_constraintBottom_toTopOf="@+id/favoriteListView"
        app:layout_constraintStart_toEndOf="@+id/drinkLabel2" />

    <TextView
        android:id="@+id/waterLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:text="Water (ml)"
        app:layout_constraintBottom_toTopOf="@+id/favoriteListView"
        app:layout_constraintStart_toEndOf="@+id/coffeeLabel2" />

    <TextView
        android:id="@+id/drinkLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginBottom="10dp"
        android:text="Drink Name"
        app:layout_constraintBottom_toTopOf="@+id/favoriteListView"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>